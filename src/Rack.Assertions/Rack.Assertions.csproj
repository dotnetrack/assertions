<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="$([MSBuild]::GetDirectoryNameOfFileAbove($(MSBuildProjectDirectory), build\Versions.props))\build\Versions.props" />

  <PropertyGroup>
    <TargetFrameworks>net45;netstandard1.0</TargetFrameworks>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>

  <PropertyGroup>
    <Company>Rack</Company>
    <Product>Assertions</Product>
    <Authors>Ben Amodio</Authors>
    <Description>A no frills library for validating arguments.</Description>
    <Copyright>Copyright ©2017 Ben Amodio</Copyright>
    <PackageId>Rack.Assertions</PackageId>
    <PackageTags>assert guard ensure contract validation precondition</PackageTags>
    <PackageIconUrl>https://raw.githubusercontent.com/dotnetrack/assertions/master/nuget/icon.png</PackageIconUrl>
    <PackageProjectUrl>https://github.com/dotnetrack/assertions</PackageProjectUrl>
    <PackageLicenseUrl>https://github.com/dotnetrack/assertions/blob/master/LICENSE</PackageLicenseUrl>
    <RepositoryUrl>https://github.com/dotnetrack/assertions</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
  </PropertyGroup>

</Project>